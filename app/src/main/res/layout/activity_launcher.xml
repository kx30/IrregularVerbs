<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.activities.LauncherActivity"
    android:background="@color/colorPrimaryDark">

    <include layout="@layout/toolbar"/>

    <Button
        android:id="@+id/examButton"
        style="@style/baseButton"
        android:background="@drawable/base_button_background"
        android:text="Exam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <Button
        android:id="@+id/listButton"
        style="@style/baseButton"
        android:background="@drawable/base_button_background"
        android:text="List"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/examButton" />

    <Button
        android:id="@+id/flashcardButton"
        style="@style/baseButton"
        android:background="@drawable/base_button_background"
        android:text="Flashcard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listButton" />

</android.support.constraint.ConstraintLayout>